	@echo "  make queue-retry   - Retry failed jobs"
	@echo "  make queue-clear   - Clear all jobs"
	@echo ""
	@echo "$(GREEN)ğŸ“¦ Package Management:$(RESET)"
	@echo "  make composer      - Run composer command"
	@echo "  make npm           - Run npm command"
