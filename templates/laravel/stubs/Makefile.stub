## Container Management
start:
	@echo "$(CYAN)ğŸš€ Starting {{PROJECT_NAME}}...$(RESET)"
	@docker-compose up -d
	@echo "$(GREEN)âœ… {{PROJECT_NAME}} started!$(RESET)"
	@echo "$(CYAN)ğŸŒ App: http://localhost:{{APP_PORT}}$(RESET)"
	@if [ "{{PHPMYADMIN_PORT}}" != "" ]; then echo "$(CYAN)ğŸ—„ï¸  PHPMyAdmin: http://localhost:{{PHPMYADMIN_PORT}}$(RESET)"; fi
	@if [ "{{MAILHOG_PORT}}" != "" ]; then echo "$(CYAN)ğŸ“§ MailHog: http://localhost:{{MAILHOG_PORT}}$(RESET)"; fi

stop:
	@echo "$(CYAN)â¹ï¸ Stopping {{PROJECT_NAME}}...$(RESET)"
	@docker-compose down
	@echo "$(GREEN)âœ… {{PROJECT_NAME}} stopped!$(RESET)"

restart: stop start

build:
	@echo "$(CYAN)ğŸ”¨ Building {{PROJECT_NAME}}...$(RESET)"
	@docker-compose build --no-cache
	@echo "$(GREEN)âœ… Build complete!$(RESET)"

logs:
	@docker-compose logs -f --tail=100

status:
	@echo "$(CYAN)ğŸ“Š {{PROJECT_NAME}} Status:$(RESET)"
	@docker-compose ps

## Development
shell:
	@echo "$(CYAN)ğŸš Opening application shell...$(RESET)"
	@docker-compose exec app /bin/bash

setup:
	@echo "$(CYAN)ğŸ”§ Setting up Laravel application...$(RESET)"
	@docker-compose exec app composer install --no-dev --optimize-autoloader
	@docker-compose exec app php artisan key:generate --force
	@docker-compose exec app php artisan storage:link
	@docker-compose exec app php artisan config:cache
	@docker-compose exec app php artisan route:cache
	@docker-compose exec app php artisan view:cache
	@docker-compose exec app npm install
	@docker-compose exec app npm run build
	@echo "$(GREEN)âœ… Laravel setup complete!$(RESET)"

fresh:
	@echo "$(CYAN)ğŸŒ± Fresh Laravel installation with sample data...$(RESET)"
	@docker-compose exec app php artisan migrate:fresh --seed --force
	@docker-compose exec app php artisan db:seed --force
	@make cache-clear
	@echo "$(GREEN)âœ… Fresh installation complete!$(RESET)"

install-app:
	@echo "$(CYAN)ğŸ“¦ Installing/updating dependencies...$(RESET)"
	@docker-compose exec app composer install
	@docker-compose exec app npm install
	@echo "$(GREEN)âœ… Dependencies updated!$(RESET)"

## Laravel Commands
artisan:
	@if [ -z "$(CMD)" ]; then \
		echo "$(YELLOW)Usage: make artisan CMD='command'$(RESET)"; \
		echo "$(YELLOW)Example: make artisan CMD='make:controller UserController'$(RESET)"; \
	else \
		echo "$(CYAN)ğŸ¨ Running: php artisan $(CMD)$(RESET)"; \
		docker-compose exec app php artisan $(CMD); \
	fi

migrate:
	@echo "$(CYAN)ğŸ”„ Running database migrations...$(RESET)"
	@docker-compose exec app php artisan migrate --force

migrate-fresh:
	@echo "$(CYAN)ğŸ†• Fresh migrations with seeders...$(RESET)"
	@docker-compose exec app php artisan migrate:fresh --seed --force

seed:
	@echo "$(CYAN)ğŸŒ± Running database seeders...$(RESET)"
	@docker-compose exec app php artisan db:seed --force

tinker:
	@echo "$(CYAN)âœ¨ Opening Laravel Tinker...$(RESET)"
	@docker-compose exec app php artisan tinker

## Performance & Cache
cache-clear:
	@echo "$(CYAN)ğŸ§¹ Clearing all Laravel caches...$(RESET)"
	@docker-compose exec app php artisan optimize:clear
	@echo "$(GREEN)âœ… All caches cleared!$(RESET)"

optimize:
	@echo "$(CYAN)âš¡ Optimizing Laravel for production...$(RESET)"
	@docker-compose exec app php artisan optimize
	@docker-compose exec app composer dump-autoload --optimize
	@echo "$(GREEN)âœ… Laravel optimized!$(RESET)"

config-cache:
	@echo "$(CYAN)âš™ï¸ Caching configuration...$(RESET)"
	@docker-compose exec app php artisan config:cache

route-cache:
	@echo "$(CYAN)ğŸ›£ï¸ Caching routes...$(RESET)"
	@docker-compose exec app php artisan route:cache

view-cache:
	@echo "$(CYAN)ğŸ‘ï¸ Caching views...$(RESET)"
	@docker-compose exec app php artisan view:cache

## Queue Management
queue-work:
	@echo "$(CYAN)ğŸš€ Starting queue worker...$(RESET)"
	@docker-compose exec -d app php artisan queue:work --sleep=3 --tries=3 --max-time=3600

queue-stop:
	@echo "$(CYAN)â¹ï¸ Stopping queue workers...$(RESET)"
	@docker-compose exec app php artisan queue:restart

queue-retry:
	@echo "$(CYAN)ğŸ”„ Retrying failed jobs...$(RESET)"
	@docker-compose exec app php artisan queue:retry all

queue-clear:
	@echo "$(CYAN)ğŸ—‘ï¸ Clearing all jobs...$(RESET)"
	@docker-compose exec app php artisan queue:clear

## Package Management
composer:
	@if [ -z "$(CMD)" ]; then \
		echo "$(YELLOW)Usage: make composer CMD='command'$(RESET)"; \
		echo "$(YELLOW)Example: make composer CMD='require laravel/sanctum'$(RESET)"; \
	else \
		echo "$(CYAN)ğŸ“¦ Running: composer $(CMD)$(RESET)"; \
		docker-compose exec app composer $(CMD); \
	fi

npm:
	@if [ -z "$(CMD)" ]; then \
		echo "$(YELLOW)Usage: make npm CMD='command'$(RESET)"; \
		echo "$(YELLOW)Example: make npm CMD='run dev'$(RESET)"; \
	else \
		echo "$(CYAN)ğŸ“¦ Running: npm $(CMD)$(RESET)"; \
		docker-compose exec app npm $(CMD); \
	fi

yarn:
	@if [ -z "$(CMD)" ]; then \
		echo "$(YELLOW)Usage: make yarn CMD='command'$(RESET)"; \
	else \
		echo "$(CYAN)ğŸ“¦ Running: yarn $(CMD)$(RESET)"; \
		docker-compose exec app yarn $(CMD); \
	fi

bun:
	@if [ -z "$(CMD)" ]; then \
		echo "$(YELLOW)Usage: make bun CMD='command'$(RESET)"; \
	else \
		echo "$(CYAN)ï¿½ Running: bun $(CMD)$(RESET)"; \
		docker-compose exec app bun $(CMD); \
	fi

## Database
backup:
	@echo "$(CYAN)ğŸ’¾ Creating database backup...$(RESET)"
	@mkdir -p sqlback
	@docker-compose exec db mysqldump -u root -ppassword {{PROJECT_NAME}} > sqlback/backup_$(shell date +%Y%m%d_%H%M%S).sql
	@echo "$(GREEN)âœ… Database backed up to sqlback/ folder$(RESET)"
	@ls -la sqlback/ | tail -5

import:
	@echo "$(CYAN)ğŸ“¥ Importing latest SQL file...$(RESET)"
	@if [ ! -d "sqlback" ]; then \
		echo "$(RED)âŒ sqlback/ folder not found. Please create it and add SQL files.$(RESET)"; \
		exit 1; \
	fi
	@LATEST_SQL=$$(ls -t sqlback/*.sql 2>/dev/null | head -n1); \
	if [ -z "$$LATEST_SQL" ]; then \
		echo "$(RED)âŒ No SQL files found in sqlback/ folder$(RESET)"; \
		exit 1; \
	else \
		DB_NAME=$$(docker-compose exec -T db mysql -u root -ppassword -e "SHOW DATABASES;" 2>/dev/null | grep -v -E "^(Database|information_schema|performance_schema|mysql|sys)$$" | head -n1 | tr -d '\r'); \
		if [ -z "$$DB_NAME" ]; then \
			echo "$(RED)âŒ No application database found$(RESET)"; \
			exit 1; \
		fi; \
		echo "$(CYAN)ğŸ“¥ Importing: $$LATEST_SQL into database: $$DB_NAME$(RESET)"; \
		docker-compose exec -T db mysql -u root -ppassword "$$DB_NAME" < "$$LATEST_SQL"; \
		echo "$(GREEN)âœ… SQL file imported successfully!$(RESET)"; \
	fi

db-drop:
	@echo "$(YELLOW)ğŸ—‘ï¸ Dropping and recreating database...$(RESET)"
	@DB_NAME=$$(docker-compose exec -T db mysql -u root -ppassword -e "SHOW DATABASES;" 2>/dev/null | grep -v -E "^(Database|information_schema|performance_schema|mysql|sys)$$" | head -n1 | tr -d '\r'); \
	if [ -z "$$DB_NAME" ]; then \
		echo "$(RED)âŒ No application database found$(RESET)"; \
		exit 1; \
	else \
		echo "$(YELLOW)ğŸ—‘ï¸ Dropping database: $$DB_NAME$(RESET)"; \
		docker-compose exec -T db mysql -u root -ppassword -e "DROP DATABASE IF EXISTS \`$$DB_NAME\`; CREATE DATABASE \`$$DB_NAME\`;" 2>/dev/null; \
		echo "$(GREEN)âœ… Database $$DB_NAME dropped and recreated successfully!$(RESET)"; \
	fi

refresh:
	@echo "$(CYAN)ğŸ”„ Refreshing database (drop tables + import)...$(RESET)"
	@make db-drop
	@make import
	@echo "$(GREEN)âœ… Database refreshed successfully!$(RESET)"

db-shell:
	@echo "$(CYAN)ğŸ—„ï¸ Opening database shell...$(RESET)"
	@docker-compose exec db mysql -u root -ppassword {{PROJECT_NAME}}

db-reset:
	@echo "$(CYAN)ğŸ”„ Resetting database...$(RESET)"
	@make migrate-fresh
	@echo "$(GREEN)âœ… Database reset complete!$(RESET)"

## Development Tools
test:
	@echo "$(CYAN)ğŸ§ª Running PHPUnit tests...$(RESET)"
	@docker-compose exec app php artisan test

pint:
	@echo "$(CYAN)ğŸ¨ Running Laravel Pint (code formatting)...$(RESET)"
	@docker-compose exec app ./vendor/bin/pint

phpstan:
	@echo "$(CYAN)ğŸ” Running PHPStan (static analysis)...$(RESET)"
	@docker-compose exec app ./vendor/bin/phpstan analyse

ide-helper:
	@echo "$(CYAN)ğŸ’¡ Generating IDE helper files...$(RESET)"
	@docker-compose exec app php artisan ide-helper:generate
	@docker-compose exec app php artisan ide-helper:models --write
	@docker-compose exec app php artisan ide-helper:meta
	@echo "$(GREEN)âœ… IDE helpers generated!$(RESET)"

## Development Shortcuts
dev:
	@echo "$(CYAN)ğŸ”§ Starting development environment...$(RESET)"
	@make start
	@echo "$(YELLOW)â±ï¸ Waiting for containers to be ready...$(RESET)"
	@sleep 5
	@make install-app
	@make cache-clear
	@echo "$(GREEN)âœ… Development environment ready!$(RESET)"
	@echo "$(PURPLE)ğŸš€ Happy coding!$(RESET)"

prod:
	@echo "$(CYAN)ğŸš€ Preparing for production...$(RESET)"
	@make setup
	@make optimize
	@make test
	@echo "$(GREEN)âœ… Production build complete!$(RESET)"

## Laravel GodMode Integration
godmode-status:
	@echo "$(CYAN)ğŸ“Š Laravel GodMode Status Check$(RESET)"
	@echo "$(GREEN)Services:$(RESET)"
	@docker-compose ps --format "table {{.Service}}\t{{.Status}}\t{{.Ports}}"
	@echo ""
	@echo "$(GREEN)Queue Workers:$(RESET)"
	@docker-compose exec app php artisan queue:monitor 2>/dev/null || echo "No queue workers running"
	@echo ""
	@echo "$(GREEN)Cache Status:$(RESET)"
	@docker-compose exec app php artisan config:show cache.default 2>/dev/null || echo "Cache driver: file"

godmode-info:
	@echo "$(CYAN)â„¹ï¸  Laravel GodMode Project Info$(RESET)"
	@echo "$(GREEN)Project:$(RESET) {{PROJECT_NAME}}"
	@echo "$(GREEN)Laravel Version:$(RESET) $$(docker-compose exec app php artisan --version 2>/dev/null || echo 'Unknown')"
	@echo "$(GREEN)PHP Version:$(RESET) $$(docker-compose exec app php -v | head -n1 || echo 'Unknown')"
	@echo "$(GREEN)Composer Packages:$(RESET) $$(docker-compose exec app composer show --direct 2>/dev/null | wc -l || echo '0') packages"
	@echo "$(GREEN)NPM Packages:$(RESET) $$(docker-compose exec app npm list --depth=0 2>/dev/null | grep -c 'â”œâ”€â”€\\|â””â”€â”€' || echo '0') packages"
